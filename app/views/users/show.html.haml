.show
  %h4 User Profile
  %div
    %h3= @user.full_name.strip.present? ? @user.full_name.strip : @user.email
    %ul
      - unless @user.full_name.strip.blank?
        %li
          %span email:
          %div= mail_to @user.email
      - if @user.home_page.strip.present?
        %li
          %span home page:
          %div= @user.home_page
      - if @user.biography.strip.present?
        %li
          %span biography:
          .long-text= @user.biography
      - if @user.twitter.strip.present?
        %li
          %span twitter:
          %div
            %a{:href => "http://twitter.com/#{@user.twitter}"}
              http://twitter.com/#{@user.twitter}
      - if @user.speakerrate.strip.present?
        %li
          %span speakerrate:
          %div
            %a{:href => @user.speakerrate}= @user.speakerrate
  .actions
    - if can? :update, @user
      = link_to "Edit", edit_user_path(@user)
