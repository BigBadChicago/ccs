<% if model.errors.any? %>
  <%
    errors = @errors
    errors.merge!(model.errors) unless model.blank?
  %>
  <div id="error_explanation">
    <h4><%= pluralize(errors.count, "error") %> prohibited this
      user from being saved:</h4>

    <ul>
      <% errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<fieldset>
  <legend>and a little bit about yourself...</legend>
  <ul>
    <li>
    <%= f.label :email, :class => "required" %>
    <%= f.email_field :email, :placeholder => "your@email.com" %>
    <div class="hint">the email address we can reach you at</div>
    </li>

    <li>
    <%= f.label :first_name, :class => "" %>
    <%= f.text_field :first_name, :placeholder => "first name" %>
    </li>

    <li>
    <%= f.label :last_name, :class => "" %>
    <%= f.text_field :last_name, :placeholder => "last name" %>
    </li>

    <li>
    <%= f.label :home_page, :class => "" %>
    <%= f.url_field :home_page, :placeholder => "http://your.homepage.com" %>
    <div class="hint">this can be your blog, twitter, linkedin or personal homepage</div>
    </li>

    <li>
    <%= f.label :biography, :class => "" %>
    <%= f.text_area :biography, :placeholder => "some biographical information" %>
    <div class="hint">your life story in 1K characters or less</div>
    </li>

    <li>
    <%= f.label :avatar, :accept => 'image/png,image/gif,image/jpeg', :class => "optional" %>
    <%= f.file_field :avatar %>
    <div class="hint">feel free to upload your profile picture along with your proposal but it's
      optional
    </div>
    </li>
  </ul>
</fieldset>
<fieldset>
  <ul>
    <li>
    <button type="submit" id="user_submit" name="commit">submit</button>
    </li>
  </ul>
</fieldset>

