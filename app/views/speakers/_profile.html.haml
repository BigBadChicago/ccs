%h3.name
  %a{:id=>speaker.full_name, :style=> "text-decoration: none;"}= speaker.full_name
%p.bio= speaker.biography
.profile_footer
  - if admin?
    email:
    %a{:href=>"mailto:#{speaker.email}"}
      = speaker.email
    %br
  - if !speaker.homepage.empty?
    %i
      homepage:
      %a{:href=>speaker.homepage}
        = speaker.homepage
- if admin?    
  %span= link_to 'Show', speaker
  %span= link_to 'Edit', edit_speaker_path(speaker)
  %span= link_to 'Destroy', speaker, :confirm => 'Are you sure?', :method => :delete
