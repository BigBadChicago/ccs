- content_for :head do
  = stylesheet_link_tag 'submission.css', :media => 'screen, projection'

%hr.space
.span-15.colborder
  - form_for :volunteer, @volunteer, :html => {:id => "talk_form", :class => "talk_form", :"accept-charset" => "UTF-8"}, :url => {:action => "create"} do |f|
    %h2
      We need your help!
    %p.light
      Interested in participating in the Chicago Code Camp but don't want to be stuck making a presentation? Then we'd love to get your help with the myriad of task to be done.
    /= f.error_messages
    %label{:for => "volunteer_full_name"} Hi, my name is
    = f.text_field :full_name, :class => "field required", :maxlength => 24
    %hr.space
    %label{:for => "volunteer_preferences"} I'd like to help out. But I may only be available for specific things or times, such as ...
    = f.text_area :preferences, :style => "width: 100%;", :class => "required"
    %hr.space
    %label{:for => "volunteer_email"} You can email me at
    = f.text_field :email, :class => "field required email"
    %hr.space
    %p{:style => "text-align: center;"}
      = f.submit "Alrighty, let me know what needs to be done."
    %hr.space
    = link_to 'Back', volunteers_path
.container.span-8.last
  = render :partial => "shared/countdown"
- content_for :after_body do
  %script{:src => "http://ajax.microsoft.cojjjm/ajax/jquery/jquery-1.4.2.min.js", :type => "text/javascript"}
  %script{:src => "http://ajax.microsoft.com/ajax/jQuery.Validate/1.6/jQuery.Validate.min.js", :type => "text/javascript"}
  %script{:src => "../../../javascripts/speakers.js", :type => "text/javascript"}
