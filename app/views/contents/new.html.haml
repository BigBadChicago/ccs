%h1 New content
- form_for(@content) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :value
    %br/
    = f.text_area :value
  %p
    = f.label :category
    %br/
    = f.text_field :category
  %p
    = f.submit 'Create'
= link_to 'Back', contents_path
