%h1 Editing submission
- form_for(@submission) do |f|
  = f.error_messages
  %p
    = f.label :full_name
    %br/
    = f.text_field :full_name
  %p
    = f.label :biography
    %br/
    = f.text_field :biography
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :homepage
    %br/
    = f.text_field :homepage
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :description
    %br/
    = f.text_field :description
  %p
    = f.submit 'Update'
  = link_to 'Show', @submission
  |
  \#{link_to 'Back', submissions_path}
