- content_for :head do
  = stylesheet_link_tag 'submission.css', :media => 'screen, projection'

%hr.space
.span-15.colborder
  - form_for :submission, @submission, :html => {:id => "talk_form", :class => "talk_form", :"accept-charset" => "UTF-8"}, :url => {:action => "create"} do |f|
    %h2
      Calling all Chicago-land developers and speakers!
    %p.light
      Are you a developer with a passion for your craft? We want to hear your voice! Give us a little information on the talk you're planning and how to contact you.
    /= f.error_messages
    %label{:for => "submission_full_name"} Hi, my name is
    = f.text_field :full_name, :class => "field required", :maxlength => 24
    %hr.space
    %label{:for => "submission_title"} I'm interested in coming out and giving a presentation under the working title
    = f.text_field :title, :maxlength => 48, :class => "field required"
    %hr.space
    %label{:for => "submission_description"} In <= 500 characters I'd describe my talk as being about
    = f.text_area :description, :style => "width: 100%;", :class => "required"
    %hr.space
    %label{:for => "submission_email"} You can email me at
    = f.text_field :email, :class => "field required email"
    %hr.space
    %label{:for => "submission_homepage"} My home page or blog is at
    = f.text_field :homepage, :class => "field url"
    %hr.space
    %label{:for => "submission_biography"} My biography in 500 characters or less is
    = f.text_area :biography, :class => "required", :style => "width: 99%;"
    %hr.space
    %p{:style => "text-align: center;"}
      = f.submit "That's about it, let me know what you think."
    %hr.space
    = link_to 'Back', submissions_path
.container.span-8.last
  = render :partial => "shared/countdown"
- content_for :after_body do
  %script{:src => "http://ajax.microsoft.cojjjm/ajax/jquery/jquery-1.4.2.min.js", :type => "text/javascript"}
  %script{:src => "http://ajax.microsoft.com/ajax/jQuery.Validate/1.6/jQuery.Validate.min.js", :type => "text/javascript"}
  %script{:src => "../../../javascripts/speakers.js", :type => "text/javascript"}
