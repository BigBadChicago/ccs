!!! 5 utf-8
%html
  %head
    %meta{:charset => "UTF-8"}
    %meta{:"http-equiv" => "Content-Language", :content => "en"}
    %meta{:name => "description", :content=>"Chicago Code Camp 2, the destination event for Chicago-land developers."}
    %meta{:name => "keywords", :content=>"Scala Ioke HAML Sass C# Ruby Rails Clojure MVC Django F# Chicago CodeCamp"}
    %title Chicago Code Camp 2
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = yield :head
  %body
    = render :partial => "shared/calltoaction"
    .container.MAIN
      = render :partial => "shared/navbar"
      %hr.space
      .span-24.last{:style => "text-align: center;"}
        %img{:alt => "Chicago Code Camp 2", :src => "../../../images/masthead.png"}
      #flash.container.span-24{:style => "text-align: center;"}
        - flash.each do |key, value|
          %div{:id => "flash_#{key}"}= h value
      %hr.space
      .container
      = yield
      %hr.space
      .container.span-24.last.quiet{:style => "font-size: .78em"}
        .span-10
          %span{:style => "display: inline-block; vertical-align: text-bottom;"}
            %a{:href=>"http://creativecommons.org/licenses/by/3.0/", :rel => "license"}
              %img{:width => 88, :height => 31, :style => "border: medium none;", :alt => "Creative Commons License", :src => "http://i.creativecommons.org/l/by/3.0/88x31.png"}
          %span{:style => "display: inline-block;"}
            Except where otherwise <a class="subfoot" href="/about#license">noted</a>, content on this site is<br/>licensed under a <a class="subfoot" href="http://creativecommons.org/licenses/by/3.0/" rel="license">Creative Commons Attribution 3.0 License</a>
        .span-13{:style => "text-align: right; font-size: .78em;"}
          = render :partial => "shared/logon"
  = yield :after_body
  = render :partial => "shared/getsatisfaction"
  = render :partial => "shared/ganalytics"
